extends layout

block content
    h1 Update Book
        form(action=`/books/${book.id}`, method='post')
            p
                label(for='title') Title
                input#title(name='title' type='text' value='The Hunger Games')
            p
                label(for='author') Author
                input#author(name='author' type='text' value='Suzanne Collins')
            p
                label(for='genre') Genre
                input#genre(name='genre' type='text' value='Fantasy')
            p
                label(for='year') Year
                input#year(name='year' type='text' value='2008')
            p
                input(type='submit' value='Update Book')
        form(action=`/books/${books.id}/delete`, method='post', onsubmit="return confirm('Do you really want to delete this book?');")
            p
                a.button(href='/') Cancel
            p
                input(type='submit' value='Delete Book')